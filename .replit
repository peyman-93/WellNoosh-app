modules = ["nodejs-20", "web", "ruby-3.2", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["gitFull", "glibcLocales", "libGL", "libGLU", "libxcrypt", "pkg-config", "playwright-driver", "portaudio", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd main-front && EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0 npx expo start --web --port 5000 --host lan"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd main-backend && npm run dev"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
EXPO_PUBLIC_API_URL = "/api"
CORS_ORIGIN = "https://095094e8-d211-44fe-b1f0-141ae0e01a11-00-15q9kmcblefe8.worf.replit.dev,https://5000-095094e8-d211-44fe-b1f0-141ae0e01a11-00-15q9kmcblefe8.worf.replit.dev"

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "cd main-front && npm run build"]
publicDir = "main-front/dist"
